# Development Environment Variables Example
# Copy this file to .env.development and fill in your values

# EmailJS Configuration (for testing)
VITE_SERVICE_ID=your_test_service_id
VITE_TEMPLATE_ID=your_test_template_id
VITE_PUBLIC_KEY=your_test_public_key

# Local Ollama Configuration (for development)
VITE_OLLAMA_URL=http://localhost:11434
VITE_USE_OPENAI=false

# Chat API Configuration (optional, if not using Ollama)
# VITE_USE_OPENAI=true
# VITE_CHAT_API_URL=https://api.openai.com/v1
# VITE_CHAT_API_KEY=your_openai_api_key_here
# VITE_MODEL=gpt-3.5-turbo

# Spotify API Configuration (Development)
# Use http://localhost:5173/spotify-callback for local development
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
VITE_SPOTIFY_REDIRECT_URI=http://localhost:5173/spotify-callback

# MyAnimeList API Configuration (Development)
# Use http://localhost:5173/mal-callback for local development
VITE_MAL_CLIENT_ID=your_mal_client_id_here
VITE_MAL_REDIRECT_URI=http://localhost:5173/mal-callback

# Note: Reddit API doesn't require authentication for read-only access
# The app uses public Reddit JSON feeds